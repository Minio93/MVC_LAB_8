@model MVC_LAB.Models.Person.CreatePersonViewModel
@{
    ViewData["Title"] = "Create Person";
}

<form method="post" asp-controller="Person" asp-action="CreateNewPerson">
 
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name">
    </div>
    <div class="form-group">
        <label for="city">City</label>
        <input type="text" class="form-control" id="city" name="city" placeholder="Enter City">
    </div>
    <div class="form-group">
        <label for="gender">Gender</label>
        <select id="gender" name="gender" class="form-control" required asp-items="@Model.Gender"></select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>