@model MVC_LAB.Models.Person.EditPersonViewModel
@{
    ViewData["Title"] = "Edit Person";
}

<form method="post" asp-controller="Person" asp-action="EditPersonDetails">
    <div class="form-group">
        <label for="id">ID</label>
        <input type="text" class="form-control" id="id" name="id" placeholder="Enter Name" readonly value="@Model.ID">
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="city">City</label>
        <input type="text" class="form-control" id="city" name="city" placeholder="Enter City" value="@Model.City">
    </div>
    <div class="form-group">
        <label for="gender">Gender</label>
        <select id="gender" name="gender" class="form-control" required asp-items="@Model.Gender"></select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>